<!DOCTYPE html>
<html>
<head>
    <title>Bienvenue sur Whatsup</title>
	<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
        <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
    


    <!-- Latest compiled and minified JavaScript -->
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="{{ asset('bundles/knnfwhatsup/css/style.css') }}" />
    <style>

        @font-face {
            font-family: 'lighthouse_personal_useRg';
            src: url({{asset('bundles/knnfwhatsup/fonts/lighthouse_personaluse-webfont.eot')}});
            src: url({{asset('bundles/knnfwhatsup/fonts/lighthouse_personaluse-webfont.eot?#iefix')}}) format('embedded-opentype'),
                 url({{asset('bundles/knnfwhatsup/fonts/lighthouse_personaluse-webfont.woff')}}) format('woff'),
                 url({{asset('bundles/knnfwhatsup/fonts/lighthouse_personaluse-webfont.ttf')}}) format('truetype'),
                 url({{asset('bundles/knnfwhatsup/fonts/lighthouse_personaluse-webfont.svg#lighthouse_personal_useRg')}}) format('svg');
            font-weight: normal;
            font-style: normal;

        }


        body {background-color: #222; color:#fff;}
        .whatsup-header{height: 100px;}
        .whatsup-content {padding-top:10px;}
        .whatsup-navbar {background-color: #222;}
        .whatsup-navbar ul li > a:hover {background-color: #222;}
        .whatsup-menu {background-color: #de4b39;}
        .navbar-brand {color: #fff;}
        .navbar ul.navbar-nav > li > a {color:#fff;}
        .navbar ul.navbar-nav > li.active {background-color: #222;}

        .whatsup-wrapper {width:1024px; margin:auto; background-color: #000; min-height: 500px;}
        .box-head {width:100%;border-bottom:2px solid #de4b39; margin-bottom: 8px;}

        .agenda_body {background-color: #000;max-height:500px; overflow-y:scroll;}
        .agenda_event {margin-top:5px;padding: 0 15px; }
        .event_month, .event_day {text-align: center; padding:3px 0;font-weight: bold;}
        .event_month {background-color: #fff;color:#de4b39;}
        .event_day {background-color: #373737; color: #fff;}

        .whatsup-content .container {background-color: #000;}
    </style>


 </head>
 <body>
    <div class="whatsup-header">
        <nav class="whatsup-navbar navbar navbar-fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">WhatsUp!</a>
                 {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                 Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                {% endif %}
            </div>

            <div class="container whatsup-menu">
                
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {{ render(controller("KnnfWhatsupBundle:Index:menu")) }}
                
                  <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                      <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="button" class="btn"><span class="glyphicon glyphicon-search"></span></button>
                  </form>
                </div><!-- /.navbar-collapse -->
                
            </div>
        </nav>
    </div>  
    <div class="whatsup-content">
        <div class="container">
    
        {% block content %}{% endblock %}
        </div>
    </div>
    <div class="whatsup-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-5" style="text-align:right;">
                    <div class="box-head">
                        <h2 style="font-family:'lighthouse_personal_useRg'; text-align:right;">Plan du site</h2>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <a href="#">Accueil</a>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row"><a href="#">Musique</a></div>
                        <div class="row"><a href="#">Mode</a></div>
                        <div class="row"><a href="#">Art</a></div>
                    </div>
                    <div class="col-md-4">
                        <div class="row"><a href="#">Cinema</a></div>
                        <div class="row"><a href="#">Sorites</a></div>
                        <div class="row"><a href="#">Geek</a></div>
                    </div>
                </div>
                <div class="col-md-2" style="text-align:center;">
                    <br /><br /><br /><br /><br />
                    WhatsUp!
                    <br /><br /><br /><br /><br />
                </div>
                <div class="col-md-5">
                    <div class="box-head">
                        <h2 style="font-family:'lighthouse_personal_useRg'; text-align:left;">Contact</h2>
                    </div>
                    <div class="col-md-4">
                        0123456789<br />
                        12 rue Waka waka<br />
                        98765 Oukouk
                    </div>
                    <div class="col-md-8" style="text-align:right;">
                        <a href="#"><img width="62" height="62" alt="" src="{{asset('bundles/knnfwhatsup/img/facebook.jpg')}}" class=""></a>
                        <a href="#"><img width="62" height="62" alt="" src="{{asset('bundles/knnfwhatsup/img/twitter.jpg')}}" class=""></a>
                        <a href="#"><img width="62" height="62" alt="" src="{{asset('bundles/knnfwhatsup/img/google.jpg')}}" class=""></a>
                        <a href="#"><img width="62" height="62" alt="" src="{{asset('bundles/knnfwhatsup/img/email.jpg')}}" class=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




{% block javascripts %}

    <script type="text/javascript" src="{{asset('bundles/knnfwhatsup/js/jquery.slimscroll.min.js')}}"></script>
    <script>
    $(function(){
        $('#toto').slimScroll({
            color: '#fff',
            height : '500px'
        });
    });

    </script>
 {% endblock %}