{% extends "KnnfWhatsupBundle:Layout/front:index.html.twig" %}

{% block body %}
	{% block content %}
	  	<div class="row">
			<div class="col-12">
				<div class="widget-box">
					<h2>Ajouter un événement</h2>
					
              <form class="form-horizontal" role="form" method="POST" {{ form_enctype(form) }}>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">Prénom</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">Nom</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword4" class="col-sm-2 control-label">Pseudo</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Site web</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.website, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Date de naissance</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.birthday)}}
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Avatar</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.photo, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                  <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Pays</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.country, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                  <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Ville</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.city, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                  <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Description</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.description, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>
                 <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">ZipCode</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.zipcode, {'attr': {'class': 'form-control input-small'}})}}
                  </div>
                </div>


                <div class="form-group">
                  <label for="inputPassword5" class="col-sm-2 control-label">Action</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.submit)}}
                  </div>
                </div>
                {{ form_widget(form._token) }}
              </form>



						</div>
					</div>
			</div>
            </div>
        </div>
    {% block javascripts %}
      <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
       
       <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />

        <script type="text/javascript">
          $("form input.date").datepicker({
              dateFormat: 'dd/mm/yy',
              firstDay:1
          }).attr("readonly","readonly");
        </script>
    {% endblock %}
{% endblock %}
{% endblock %}
