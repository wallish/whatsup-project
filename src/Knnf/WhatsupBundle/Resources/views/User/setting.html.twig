

{% extends "KnnfWhatsupBundle:Layout/front:index.html.twig" %}

{% block content %}

    <div class="row" >

        {# partie gauche de la page article #}
        <div class="col-md-8 whatsup-singlearticle-left">

            {# Article #}
            <br />
            <div class="whatsup-article-author-profil" width="780px" height="300px">


<br /><br />
<div class="panel panel-default" style="width:100%;">
          <h2 class="main"><strong>Mes préférences</strong></h2>
          <br/>

<a href="{{path('fos_user_change_password')}}">
<button type="button" class="btn btn-default">
  <span class="glyphicon glyphicon-user"></span> Changer de mot de passe
</button>
</a>
<a href="{{path('user_delete2', { 'id': user.id }) }}">
<input type="hidden"
<button type="button" class="btn btn-default">
  <span class="glyphicon glyphicon-user"></span> Supprimer son compte
</button>
</a>
<br />
<br />
<form class="form-horizontal" role="form" method="POST" {{ form_enctype(form) }}>
 
  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Article favorie ligne 1</label>
    <div class="col-sm-10">
     {{ form_widget(form.category, {'class': 'form-control input-small'})}}
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Article favorie ligne 2</label>
    <div class="col-sm-10">
     {{ form_widget(form.category2, {'class': 'form-control input-small'})}}
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Article favorie ligne 3</label>
    <div class="col-sm-10">
     {{ form_widget(form.category3, {'class': 'form-control input-small'})}}
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Action</label>
    <div class="col-sm-10">
      {{ form_widget(form._token) }}
     {{ form_widget(form.submit)}}
    </div>
  </div>
</form>

</div>

        
</div>
<div class="whatsup-article-author-profil" width="780px" height="300px">


</div>
         
 
            
        </div>

        {# partie droite de la page article #}
        <div class="col-md-4 whatsup-article-relative">
            <div>
                <h4>Articles les plus visualisés</h4>
                {{ render(controller("KnnfWhatsupBundle:Article:authorMostViewArticles", {"author": user, "limit":3} )) | raw }}

            </div>
            <div>
                <h4>Article les mieux notés</h4>
                {{ render(controller("KnnfWhatsupBundle:Article:authorArticles", {"author": user, "limit":3} )) }}

            </div>
        </div>

    </div>

    <style type="text/css">
@import url(http://fonts.googleapis.com/css?family=Lato:400,700);
body
{
    font-family: 'Lato', 'sans-serif';
    }
.profile 
{
    min-height: 355px;
    display: inline-block;
    }
figcaption.ratings
{
    margin-top:20px;
    }
figcaption.ratings a
{
    color:#f1c40f;
    font-size:11px;
    }
figcaption.ratings a:hover
{
    color:#f39c12;
    text-decoration:none;
    }
.divider 
{
    border-top:1px solid rgba(0,0,0,0.1);
    }
.emphasis 
{
    border-top: 4px solid transparent;
    }
.emphasis:hover 
{
    border-top: 4px solid #DE4D3B;
    }
.emphasis h2
{
    margin-bottom:0;
    }
span.tags 
{
    background: #DE4D3B;
    border-radius: 2px;
    color: #f5f5f5;
    font-weight: bold;
    padding: 2px 4px;
    }
.dropdown-menu 
{
    background-color: #34495e;    
    box-shadow: none;
    -webkit-box-shadow: none;
    width: 250px;
    margin-left: -125px;
    left: 50%;
    }
.dropdown-menu .divider 
{
    background:none;    
    }
.dropdown-menu>li>a
{
    color:#f5f5f5;
    }
.dropup .dropdown-menu 
{
    margin-bottom:10px;
    }
.dropup .dropdown-menu:before 
{
    content: "";
    border-top: 10px solid #34495e;
    border-right: 10px solid transparent;
    border-left: 10px solid transparent;
    position: absolute;
    bottom: -10px;
    left: 50%;
    margin-left: -10px;
    z-index: 10;
    }





    </style>

