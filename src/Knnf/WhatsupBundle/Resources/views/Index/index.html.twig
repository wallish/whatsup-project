        <script>
        var config = {
            interval: 7000,
            articleCount:4,
            carouselInterval: 300
        }

        var whatsup = {};

        whatsup.app = {
            firstTime: true,
            initialize: function() {
                var self = this;
                $.ajax({
                    url: "{{ path('article_getarticles')}}",
                    type: "post",
                    success: function(data){
                        self.startCarrouselWith(JSON.parse(data));
                    },
                    error:function(){
                        console.log("[WHATSUP] Cannot load datas from : {{ path('article_getarticles')}}");
                    }
                });
            },
            startCarrouselWith: function (datas) {
                var self = this,
                start = 0,
                articleNumber = config.articleCount;

                var parseArrays = function () {
                    var arrayToSend;
                    if((start + articleNumber) <= datas.length){
                        arrayToSend = datas.slice(start, start + articleNumber);
                        start = start + articleNumber;

                    }else{
                        // article left in the current array
                        var articleLeftLength = datas.length - start;

                        // get the remaining items
                        var arrayFound = datas.slice(datas.length - articleLeftLength, datas.length);

                        // the new index to start OR the item.length to refrive in the new array
                        var newIndexToStart = 4 - articleLeftLength;

                        // get the count from the first element
                        var arrayFound2 = datas.slice(0, newIndexToStart);

                        // merge them all
                        arrayToSend = arrayFound.concat(arrayFound2);

                        // define a new start index
                        start = newIndexToStart;

                    }
                    // update the view
                    self.updateArticleRow(arrayToSend);
                }
                parseArrays();
                var dataInterval = setInterval(parseArrays, config.interval);
            },
            updateArticleRow: function (datas) {
                var self = this,
                contentToPush = [];
                for (var i = datas.length - 1; i >= 0; i--) {
                    var resu = datas[i];
                    var slug = "/whatsup/web/app_dev.php/whatsup/article/" + resu.slug;
                    var htmlToAppend = 
                    '<a href="'+slug+'" class="col-md-3 articleItem" style="background:url(/whatsup/web/uploads/documents/'+resu.path+') no-repeat scroll left center / cover;">'+
                        '<div class="contentItem">'+
                            '<div class="backgroundContent"></div>'+
                            '<h3>' + resu.title + '</h3>'+
                            '<div class="line"></div>'+
                            '<h4 class="author">'+
                                (resu.author || 'Nirunthan Parameswaran') +
                            '</h4>'+
                        '</div>'+
                    '</a>';
                    contentToPush.push(htmlToAppend);
                };
                if(self.firstTime){
                    self.firstTime = false;                   
                    $('.row.articles').html(contentToPush.join(' '));

                }else{
                    $('.row.articles').fadeOut(config.carouselInterval, function () {                    
                        $(this).html(contentToPush.join(' '));
                        $(this).fadeIn(config.carouselInterval);
                    });
                }

            }
        }

        window.onload = function () {
            $("#event_description").css("display","none");
            whatsup.app.initialize();
            initializeTrucChelou();
        }


        function displayEvent(id){
            $('#agenda_content_description'+id).dialog({
