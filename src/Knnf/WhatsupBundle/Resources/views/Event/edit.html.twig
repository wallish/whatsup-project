{% extends "KnnfWhatsupBundle:Layout/front:index.html.twig" %}

{% block body %}
	{% block content %}
	  	<div class="row">
			<div class="col-12">
				<div class="widget-box">
					<h2>Ajouter un événement</h2>
					
<form class="form-horizontal" role="form" method="POST" {{ form_enctype(form) }}>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{ form_widget(form.title, {'attr': {'class': 'form-control input-small'}})}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{ form_widget(form.description, {'attr': {'class': 'form-control input-small'}})}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword4" class="col-sm-2 control-label">Adresse</label>
    <div class="col-sm-10">
      {{ form_widget(form.address, {'attr': {'class': 'form-control input-small'}})}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Lieu</label>
    <div class="col-sm-10">
     {{ form_widget(form.place, {'attr': {'class': 'form-control input-small'}})}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Billeterie</label>
    <div class="col-sm-10">
     {{ form_widget(form.orderlink, {'attr': {'class': 'form-control input-small'}})}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Date début</label>
    <div class="col-sm-10">
     {{ form_widget(form.datestart, {'attr': {'class': 'datepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
    </div>
  </div>
    <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Date fin</label>
    <div class="col-sm-10">
     {{ form_widget(form.dateend, {'attr': {'class': 'datepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
    </div>
  </div>
    <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Horaire début</label>
    <div class="col-sm-10">
     {{ form_widget(form.hourstart, {'attr': {'class': 'timepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
    </div>
  </div>
    <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Horaire fin</label>
    <div class="col-sm-10">
     {{ form_widget(form.hourend, {'attr': {'class': 'timepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
    </div>
  </div>
    <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Catégorie</label>
    <div class="col-sm-10">
     {{ form_widget(form.category, {'class': 'form-control input-small'})}}
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword5" class="col-sm-2 control-label">Action</label>
    <div class="col-sm-10">
     {{ form_widget(form.submit)}}
    </div>
  </div>
  {{ form_widget(form._token) }}
</form>



						</div>
					</div>
			</div>
            </div>
        </div>

{% endblock %}
{% endblock %}
