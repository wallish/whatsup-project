{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Place</th>
                <th>Address</th>
                <th>Orderlink</th>
                <th>Activate</th>
                <th>Datestart</th>
                <th>Dateend</th>
                <th>Hourstart</th>
                <th>Hourend</th>
                <th>Dateinsert</th>
                <th>Dateupdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.place }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.orderlink }}</td>
                <td>{{ entity.activate }}</td>
                <td>{% if entity.datestart %}{{ entity.datestart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateend %}{{ entity.dateend|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.hourstart }}</td>
                <td>{{ entity.hourend }}</td>
                <td>{% if entity.dateinsert %}{{ entity.dateinsert|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateupdate %}{{ entity.dateupdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('event_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('event_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('event_add') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
