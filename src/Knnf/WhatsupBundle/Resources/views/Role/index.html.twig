{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Role list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Right</th>
                <th>Activate</th>
                <th>Dateinsert</th>
                <th>Dateupdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('role_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.right }}</td>
                <td>{{ entity.activate }}</td>
                <td>{% if entity.dateinsert %}{{ entity.dateinsert|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateupdate %}{{ entity.dateupdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('role_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('role_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('role_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
