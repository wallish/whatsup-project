{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Role</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Right</th>
                <td>{{ entity.rights }}</td>
            </tr>
            <tr>
                <th>Activate</th>
                <td>{{ entity.activate }}</td>
            </tr>
            <tr>
                <th>Dateinsert</th>
                <td>{{ entity.dateinsert|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{{ entity.dateupdate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('role') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('role_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
