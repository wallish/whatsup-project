{% extends "KnnfWhatsupBundle:Layout:admin.html.twig" %}

{% block body -%}
	{% block content %}




	<div id="content">
            <div id="content-header">
                <h1>Dashboard</h1>
                <div class="btn-group">
                   
                </div>
            </div>

            	



            <div id="breadcrumb">
                <a href="{{ path('admin_index')}}" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
                <a href="{{ path('media')}}" class="current">Media</a>
                <a href="{{ path('media_edit', { 'id': entity.id }) }}" class="current">Editer</a>
            </div>
            <div class="container-fluid">
               
                
	  	<div class="row">
					<div class="col-12">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="glyphicon glyphicon-plus"></i>
								</span>
								<h5>Editer lien</h5>
							</div>
							{% if success is defined %}
								<div class="alert alert-success"> Mise à jour réussi </div>
							{% endif %}
							<div class="widget-content nopadding">
								<form id="form-wizard" class="form-horizontal" method="post">
									<div id="form-wizard-1" class="step">
										<div class="form-group">
											<label class="control-label">Type</label>
											<div class="controls">
												<input type="hidden" value="PUT" name="_method">
											{{ form_widget(form.type)}}

											</div>
										</div>
										<div class="form-group">
											<label class="control-label">Contenu</label>
											<div class="controls">
												
											{{ form_widget(form.content)}}
											</div>
										</div>
								
									{{ form_widget(form._token) }}
									<div class="form-actions">
											{{ form_widget(form.submit)}}

											<div id="status"></div>
									</div>
									<div id="submitted"></div>
									</div>
								</form>
							</div>
						</div>
					</div>
			</div>

            </div>
        </div>
	{% endblock %}

{% endblock %}
