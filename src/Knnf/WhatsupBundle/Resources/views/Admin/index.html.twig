{% extends "KnnfWhatsupBundle:Layout:admin.html.twig" %}

{% block title %}KnnfWhatsupBundle:Admin:index{% endblock %}

{% block body %}
{% block content %}
  <div id="content">
            <div id="content-header">
                <h1>Dashboard</h1>
                <div class="btn-group">
                    <a class="btn"><i class="glyphicon glyphicon-file"></i></a>
                    <a class="btn" title="Manage Users"><i class="glyphicon glyphicon-user"></i></a>
                    <a class="btn"><i class="glyphicon glyphicon-comment"></i><span class="label label-danger">5</span></a>
                    <a class="btn"><i class="glyphicon glyphicon-shopping-cart"></i></a>
                </div>
            </div>

            <div id="breadcrumb">
                <a href="#" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
                <a href="#" class="current">Dashboard</a>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 center" style="text-align: center;">                 
                        <ul class="stat-boxes">
                            <li class="popover-visits">
                                <div class="left sparkline_bar_good"><span>2,4,9,7,12,10,12</span>+10%</div>
                                <div class="right">
                                    <strong>36094</strong>
                                    Visits
                                </div>
                            </li>
                            <li class="popover-users">
                                <div class="left sparkline_bar_neutral"><span>20,15,18,14,10,9,9,9</span>0%</div>
                                <div class="right">
                                    <strong>1433</strong>
                                    Users
                                </div>
                            </li>
                            <li class="popover-orders">
                                <div class="left sparkline_bar_bad"><span>3,5,9,7,12,20,10</span>-50%</div>
                                <div class="right">
                                    <strong>8650</strong>
                                    Orders
                                </div>
                            </li>
                            <li class="popover-tickets">
                                <div class="left sparkline_line_good"><span>12,6,9,23,14,10,17</span>+70%</div>
                                <div class="right">
                                    <strong>2968</strong>
                                    Tickets
                                </div>
                            </li>
                        </ul>
                    </div>  
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-danger">
                            Le commentaire de <strong>toto</strong> vient d'être signalé sur l'article "je suis un gros chocolat" <a href="#">Voir le commentaire</a>
                            <a href="#" data-dismiss="alert" class="close">×</a>
                        </div>
                        
                        </div>                  
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="widget-box">
                            <div class="widget-title"><span class="icon"><i class="glyphicon glyphicon-file"></i></span><h5>Derniers articles</h5><span title="{{ articles|length }} total posts" class="label label-info tip-left">{{ articles|length }}</span></div>
                            <div class="widget-content nopadding">
                                <ul class="recent-posts">
                                    {% for article in articles|slice(0, 3) %}
                                    <li>
                                        <div class="user-thumb">
                                            <img width="40" height="40" alt="User" src="/whatsup/web/bundles/knnfwhatsup/img/demo/av2.jpg">
                                        </div>
                                        <div class="article-post">
                                            <span class="user-info"> Par : User le {{article.dateinsert|date('d-m-Y')}} </span>
                                            <p>
                                                <a href="#">{{article.title}}</a>
                                            </p>
                                            <a href="#" class="btn btn-primary btn-mini" onclick='window.location.href = "{{ path('admin_edit_article', { 'id': article.id }) }}"'>Editer</a> {% if article.activate != 1 %}<a href="#" class="btn btn-success btn-mini" onclick="activateUser('{{ article.id }}')" >Publier</a>{% else %} <a href="#" class="btn btn-warning btn-mini" onclick="activateUser('{{ article.id }}')" >Désactiver</a> {% endif %} <a href="#" class="btn btn-danger btn-mini" onclick="deleteArticle('{{ article.id }}')" >Supprimer</a>
                                        </div>
                                    </li>
                                    {% endfor %}
                                    <li class="viewall">
                                        <a title="View all posts" class="tip-top" href="{{path('admin_article')}}"> + Voir tous les articles + </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="widget-box">
                            <div class="widget-title"><span class="icon"><i class="glyphicon glyphicon-comment"></i></span><h5>Derniers événements</h5><span title="{{ events|length }} total comments" class="label label-info tip-left">{{ events|length }}</span></div>
                            <div class="widget-content nopadding">
                                <ul class="recent-comments">
                                    {% for event in events|slice(0, 3) %}
                                    <li>
                                        <div class="user-thumb">
                                            <img width="40" height="40" alt="User" src="/whatsup/web/bundles/knnfwhatsup/img/demo/av1.jpg">
                                        </div>
                                        <div class="comments">
                                            <span class="user-info"> Par : User le {{event.dateinsert|date('d-m-Y')}} </span>
                                            <p>
                                                <a href="#">{{event.title}}</a>
                                            </p>
                                            <a href="#" class="btn btn-primary btn-mini" onclick='window.location.href = "{{ path('admin_edit_event', { 'id': event.id }) }}"'>Editer</a> {% if event.activate != 1 %}<a href="#" class="btn btn-success btn-mini" onclick="activateUser('{{ event.id }}')" >Publier</a>{% else %} <a href="#" class="btn btn-warning btn-mini" onclick="activateUser('{{ event.id }}')" >Désactiver</a> {% endif %} <a href="#" class="btn btn-danger btn-mini" onclick="deleteEvent('{{ event.id }}')" >Supprimer</a>
                                        </div>
                                    </li>
                                    {% endfor %}
                                    <li class="viewall">
                                        <a title="View all comments" class="tip-top" href="{{path('admin_event')}}"> + Voir tous les events + </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                       <div class="col-12 col-sm-6">
                        <div class="widget-box">
                            <div class="widget-title"><span class="icon"><i class="glyphicon glyphicon-comment"></i></span><h5>Derniers articles signalé</h5><span title="{{ annotations|length }} total comments" class="label label-info tip-left">{{ annotations|length }}</span></div>
                            <div class="widget-content nopadding">
                                <ul class="recent-comments">
                                    {% for annotation in annotations|slice(0, 3) %}
                                    <li>
                                        <div class="user-thumb">
                                            <img width="40" height="40" alt="User" src="/whatsup/web/bundles/knnfwhatsup/img/demo/av1.jpg">
                                        </div>
                                        <div class="comments">
                                            <span class="user-info"> Par : User le {{annotation.dateinsert|date('d-m-Y')}} </span>
                                            <p>
                                                <a href="#">{{annotation.AnnotationContent}}</a>
                                            </p>
                                            <a href="#" class="btn btn-primary btn-mini" onclick='window.location.href = "{{ path('admin_edit_event', { 'id': annotation.id }) }}"'>Editer</a>  <a href="#" class="btn btn-danger btn-mini" onclick="deleteEvent('{{ annotation.id }}')" >Supprimer</a> <a href="#" class="btn btn-warning btn-mini">Signaler</a>
                                        </div>
                                    </li>
                                    {% endfor %}
                                    <li class="viewall">
                                        <a title="View all comments" class="tip-top" href="{{path('admin_event')}}"> + Voir les articles signalés + </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                                          <div class="col-12 col-sm-6">
                        <div class="widget-box">
                            <div class="widget-title"><span class="icon"><i class="glyphicon glyphicon-comment"></i></span><h5>Articles les mieux notés</h5><span title="{{ events|length }} total comments" class="label label-info tip-left">{{ events|length }}</span></div>
                            <div class="widget-content nopadding">
                                <ul class="recent-comments">
                                    {% for event in events|slice(0, 3) %}
                                    <li>
                                        <div class="user-thumb">
                                            <img width="40" height="40" alt="User" src="/whatsup/web/bundles/knnfwhatsup/img/demo/av1.jpg">
                                        </div>
                                        <div class="comments">
                                            <span class="user-info"> Par : User le {{event.dateinsert|date('d-m-Y')}} </span>
                                            <p>
                                                <a href="#">{{event.title}}</a>
                                            </p>
                                            <a href="#" class="btn btn-primary btn-mini" onclick='window.location.href = "{{ path('admin_edit_event', { 'id': event.id }) }}"'>Editer</a> <a href="#" class="btn btn-success btn-mini" onclick="activateEvent('{{ event.id }}')" >Publier</a> <a href="#" class="btn btn-danger btn-mini" onclick="deleteEvent('{{ event.id }}')" >Supprimer</a> <a href="#" class="btn btn-warning btn-mini">Mark as spam</a>
                                        </div>
                                    </li>
                                    {% endfor %}
                                    <li class="viewall">
                                        <a title="View all comments" class="tip-top" href="{{path('admin_event')}}"> + Voir les articles les mieux notés + </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="widget-box widget-calendar">
                            <div class="widget-title"><span class="icon"><i class="glyphicon glyphicon-calendar"></i></span><h5>Calendar</h5></div>
                            <div class="widget-content nopadding">
                                <div class="calendar"></div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
{% block javascripts %}

<script>
function deleteArticle(id){
    $.ajax({
        url: "{{ path('article_delete')}}",
        type: "post",
        data: {id : id},
        success: function(){
            alert("success");
            //$("#result").html('Submitted successfully');
        },
        error:function(){
            alert("failure");
            //$("#result").html('There is error while submit');
        }
    });
};

    function activateArticle(id)
    {
        $.ajax({
            url: "{{ path('article_activate')}}",
            type: "post",
            data: {id : id},
            success: function(){
                alert("success");
                window.location.reload();
            },
            error:function(){
                alert("failure");
            }
        });
    };


</script>
