{% extends "KnnfWhatsupBundle:Layout:admin.html.twig" %}

{% block body -%}
	{% block content %}




	<div id="content">
            <div id="content-header">
                <h1>Dashboard</h1>
                <div class="btn-group">
                    <a class="btn"><i class="glyphicon glyphicon-file"></i></a>
                    <a class="btn" title="Manage Users"><i class="glyphicon glyphicon-user"></i></a>
                    <a class="btn"><i class="glyphicon glyphicon-comment"></i><span class="label label-danger">5</span></a>
                    <a class="btn"><i class="glyphicon glyphicon-shopping-cart"></i></a>
                </div>
            </div>

            	



            <div id="breadcrumb">
                <a href="{{ path('admin_index')}}" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
                <a href="{{ path('admin_user')}}" class="current">Utilisateurs</a>
                <a href="{{ path('admin_add_user')}}" class="current">Ajouter</a>
            </div>
            <div class="container-fluid">
               
        <p>Date: <input type="text" id="datepicker" name="datepicker" /></p>
                
	  	<div class="row">
					<div class="col-12">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="glyphicon glyphicon-plus"></i>
								</span>
								<h5>Ajouter un nouveau utilisateur</h5>
							</div>
							<div class="widget-content nopadding">
								<form id="form-wizard" class="form-horizontal" method="post">
									<div id="form-wizard-1" class="step">
										<div class="form-group">
											<label class="control-label">Pr√©nom</label>
											<div class="controls">
												
											{{ form_widget(form.firstname, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
										<div class="form-group">
											<label class="control-label">Nom</label>
											<div class="controls">
												
											{{ form_widget(form.lastname, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
																	<div class="form-group">
											<label class="control-label">Pseudo</label>
											<div class="controls">
												
											{{ form_widget(form.username, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
						
										<div class="form-group">
											<label class="control-label">Password</label>
											<div class="controls">
												{{ form_widget(form.password, {'attr': {'class': 'form-control input-small'}})}}
												
											</div>
										</div>
					
										
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Email</label>
											<div class="controls">
												{{ form_widget(form.email, {'attr': {'class': 'form-control input-small'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">site web</label>
											<div class="controls">
											{{ form_widget(form.website, {'attr': {'class': 'form-control input-small'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Pays</label>
											<div class="controls">
											{{ form_widget(form.country, {'attr': {'class': 'form-control input-small'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Ville</label>
											<div class="controls">
											{{ form_widget(form.city, {'attr': {'class': 'form-control input-small'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Code postal</label>
											<div class="controls">
											{{ form_widget(form.zipcode, {'attr': {'class': 'form-control input-small'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Date de naissance</label>
											<div class="controls">
											{{ form_widget(form.birthday, {'attr': {'class': 'datepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Photo</label>
											<div class="controls">
											{{ form_widget(form.photo, {'attr': {'class': 'form-control input-small'}})}}
											</div>
									</div>
									{{ form_widget(form._token) }}
									<div class="form-actions">
											{{ form_widget(form.submit)}}

											<div id="status"></div>
									</div>
									<div id="submitted"></div>
								</form>
							</div>
						</div>
					</div>
			</div>

            </div>
        </div>
	{% endblock %}

{% endblock %}
