{% extends "KnnfWhatsupBundle:Layout:admin.html.twig" %}

{% block title %}KnnfWhatsupBundle:Admin:user{% endblock %}

{% block body %}
	{% block content %}
		<div id="content">
			<div id="content-header">
				<h1>Utilisateurs</h1>
				<div class="btn-group">
					<a class="btn"><i class="glyphicon glyphicon-file"></i></a>
					<a class="btn" title="Manage Users"><i class="glyphicon glyphicon-user"></i></a>
					<a class="btn"><i class="glyphicon glyphicon-comment"></i><span class="label label-danger">5</span></a>
					<a class="btn"><i class="glyphicon glyphicon-shopping-cart"></i></a>
				</div>
			</div>
		
			<div id="breadcrumb">
				<a href="#" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
				<a href="#" class="current">Utilisateurs</a>
			</div>
			
			<div class="container-fluid">
				
				<div class="row">
					<div class="col-12">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon"><i class="glyphicon glyphicon-user"></i></span>
								<h5>LISTE DES UTILISATEURS</h5><span title="88 utilisateurs" class="label label-info tip-left">88</span>
							</div>
							<div class="widget-content nopadding">
								{# Tableau listing utilisateurs #}
								<div class="widget-content nopadding">
									<table class="table table-bordered table-striped table-hover">
										<thead>
											<tr>
												<th>ID</th>
												<th>PRENOM</th>
												<th>NOM</th>
												<th>LOGIN</th>
												<th>EMAIL</th>
												<th>ACTIONS</th>
											</tr>
										</thead>
										<tbody>
											{% for user in users %}
											<tr>
												<td>{{ user.id }}</td>
												<td>{{ user.firstname }}</td>
												<td>{{ user.lastname }}</td>
												<td>{{ user.username }}</td>
												<td>{{ user.email }}</td>
												<td>
													<button class="btn btn-success btn-sm">
														<i class="fa fa-edit"></i> Validate
													</button>
													<button class="btn btn-info btn-sm">
														<i class="fa fa-edit"></i> Edit
													</button>
													<button class="btn btn-danger btn-sm">
														<i class="fa fa-edit"></i> Delete
													</button>
												</td>
											</tr>
											{% endfor %}
										</tbody>
									</table>							
								</div>
								{# Fin Tableau listing utilisateurs #}
							</div>
						</div>
					</div>
				</div>
				
			</div>
			
		</div>
	{% endblock %}
{% endblock %}
