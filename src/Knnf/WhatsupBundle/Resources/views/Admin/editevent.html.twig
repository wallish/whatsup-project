{% extends "KnnfWhatsupBundle:Layout:admin.html.twig" %}

{% block body -%}
	{% block content %}




	<div id="content">
            <div id="content-header">
                <h1>Dashboard</h1>
                <div class="btn-group">
                    <a class="btn"><i class="glyphicon glyphicon-file"></i></a>
                    <a class="btn" title="Manage Users"><i class="glyphicon glyphicon-user"></i></a>
                    <a class="btn"><i class="glyphicon glyphicon-comment"></i><span class="label label-danger">5</span></a>
                    <a class="btn"><i class="glyphicon glyphicon-shopping-cart"></i></a>
                </div>
            </div>
            <div id="breadcrumb">
                <a href="{{ path('admin_index')}}" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
                <a href="{{ path('admin_event')}}" class="current">Evenement</a>
                <a href="{{ path('admin_edit_event', { 'id': entity.id }) }}" class="current">Editer</a>
            </div>
            <div class="container-fluid">
               
                
	  	<div class="row">
					<div class="col-12">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="glyphicon glyphicon-plus"></i>
								</span>
								<h5>Editer un événement</h5>
							</div>
							<div class="widget-content nopadding">
								<form id="form-wizard" class="form-horizontal" method="post">
									<div id="form-wizard-1" class="step">
									
								<div class="form-group">
											<label class="control-label">Titre</label>
											<div class="controls">
												
											{{ form_widget(form.title, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
										<div class="form-group">
											<label class="control-label">Description</label>
											<div class="controls">
												
											{{ form_widget(form.description, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
										<div class="form-group">
											<label class="control-label">Adresse</label>
											<div class="controls">
												
											{{ form_widget(form.address, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
										<div class="form-group">
											<label class="control-label">Lieu</label>
											<div class="controls">
												
											{{ form_widget(form.place, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
										<div class="form-group">
											<label class="control-label">Billeterie</label>
											<div class="controls">
												
											{{ form_widget(form.orderlink, {'attr': {'class': 'form-control input-small'}})}}
											</div>
										</div>
									
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Date début</label>
											<div class="controls">
											{{ form_widget(form.datestart, {'attr': {'class': 'datepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Date fin</label>
											<div class="controls">
											{{ form_widget(form.dateend, {'attr': {'class': 'datepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Horaire début</label>
											<div class="controls">
											{{ form_widget(form.hourstart, {'attr': {'class': 'timepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
											</div>
									</div>
									<div id="form-wizard-2" class="step">
										<div class="form-group">
											<label class="control-label">Horaire fin</label>
											<div class="controls">
											{{ form_widget(form.hourend, {'attr': {'class': 'timepicker form-control input-small','data-date-format' : 'dd-mm-yyyy'}})}}
											</div>
									</div>
									{{ form_widget(form._token) }}
									<input type="hidden" value="PUT" name="_method">
									<div class="form-actions">
											{{ form_widget(form.submit)}}

											<div id="status"></div>
									</div>
									<div id="submitted"></div>
								</form>
							</div>
						</div>
					</div>
			</div>

            </div>
        </div>
	{% endblock %}

{% endblock %}
