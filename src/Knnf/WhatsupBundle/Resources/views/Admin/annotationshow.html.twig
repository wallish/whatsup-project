{% extends "KnnfWhatsupBundle:Layout:admin.html.twig" %}

{% block title %}KnnfWhatsupBundle:Admin:event{% endblock %}

{% block body %}
	{% block content %}
		<div id="content">
			<div id="content-header">
				<h1>Signalement / Commentaire</h1>
				<div class="btn-group">
					<a class="btn"><i class="glyphicon glyphicon-file"></i></a>
					<a class="btn" title="Manage Users"><i class="glyphicon glyphicon-user"></i></a>
					<a class="btn"><i class="glyphicon glyphicon-comment"></i><span class="label label-danger">5</span></a>
					<a class="btn"><i class="glyphicon glyphicon-shopping-cart"></i></a>
				</div>
			</div>
			
			<div id="breadcrumb">
				<a href="{{ path('admin_index')}}" title="Go to Home" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
				<a href="{{ path('admin_event')}}" class="current">Signalement / Commentaire</a>
			</div>
			
			<div class="container-fluid">
				
				<div class="row">
					<div class="col-12">
				
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon"><i class="glyphicon glyphicon-user"></i></span>
								<h5>Annotation contenu</h5><span title="events" class="label label-info tip-left"></span>
							</div>
							<div class="widget-content nopadding">
								{# Tableau listing événements #}
								<div class="widget-content nopadding">
									<table class="table table-bordered table-striped table-hover">
												
										<tbody>
											<tr>
												<td style="width:50%"><strong>Titre de l'article</strong></td>
												<td><a href="{{path('article_show',{'slug':annotation.article.slug})}}">{{ annotation.article.title }}</a></td>
											</tr>
											<tr>
												<td style="width:50%"><strong>Auteur de l'article</strong></td>
												<td><a href="{{path('user_show',{'id':annotation.article.user.id})}}">{{ annotation.article.user.username }}</a></td>
											</tr>
											<tr>
												<td style="width:50%"><strong>Type</strong></td>
												<td>{{ annotation.annotationtype }}</td>
											</tr>
											<tr>
												<td style="width:50%"><strong>Auteur du message</strong></td>
												<td><a href="{{path('user_show',{'id':annotation.user.id})}}">{{ annotation.user.username }}</a></td>
											</tr>
										
											<tr>
												<td style="width:50%"><strong>Message</strong></td>
												<td>{{annotation.AnnotationContent}}</td>
											</tr>
										</tbody>
									</table>							
								</div>
								{# Fin Tableau listing événements #}
							</div>
						</div>
					</div>
				</div>
				
			</div>
			
		</div>
		
		{% block javascripts %}
			<script>
				function deleteEvent(id)
				{
					$.ajax({
						url: "{{ path('annotation_delete')}}",
						type: "post",
						data: {id : id},
						success: function(){
							alert("success");
							window.location.reload();
						},
						error:function(){
							alert("failure");
						}
					});
				};

				
			</script>
		{% endblock %}
	{% endblock %}
{% endblock %}
